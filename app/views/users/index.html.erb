<h1>Today sales</h1>

<% if @solddish %>
	<table border=1>
		<tr>
			<th>Recipe name</th>
			<th>Quantity sold</th>
			<th>Comission to be paid</th>
			<th>Recipe owner</th>
		</tr>
		<% @solddish.each do |dish| %>
			<tr>
			    	<% comission = dish.number_sold*dish.price_sold*0.1 %>
					<td><%= Recipe.find_by(id: dish.recipe_id).name %></td>
					<td><%= dish.number_sold %></td>
					<td><%= comission%></td>
					<td><%= User.find_by(id: Recipe.find_by(id: dish.recipe_id).user_id).username %></td>
			</tr>
		<% end %>
	</table>
<% end %>
